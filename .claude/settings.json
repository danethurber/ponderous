{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$PWD\" && python .claude/hooks/claude_quality_gate.py \"$CLAUDE_FILE_PATHS\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$PWD\" && python .claude/hooks/claude_quality_gate.py --quick-check"
          }
        ]
      }
    ]
  }
}
